@model IEnumerable<Category>
@{
    ViewData["Title"] = "index";
}

<div class="container">
    <div class="row pt-3">
        <div class="col-6">
        <h1 class="text-primary">Category</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create1" class="btn btn-primary"><i class="bi bi-patch-plus-fill"></i>&nbsp;Create New Category</a>
        </div>
    </div>
    <br /><br>


    <table class="table table-hover" width="100%">
    <thead>
        <tr class="text-center table-warning table-stripped">
        <td>Category Name</td>
        <td>Display Order</td>
        <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach(var x in Model)
        {
            <tr class="text-center table-primary">
                <td style="padding:27px 0px;">
                    @x.Name
                </td>
                    <td style="padding:27px 0px;">
                    @x.DisplayOrder
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@x.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>Edit</a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@x.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3-fill"></i>Delete
                            </a>
                        </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

